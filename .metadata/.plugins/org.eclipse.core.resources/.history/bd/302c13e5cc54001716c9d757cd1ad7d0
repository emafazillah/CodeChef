package beginner;

import java.util.Scanner;

public class AdaAndCrayons {
	
	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		int n = scan.nextInt();
		int countU = 0;
		int countD = 0;
		for(int i = 0; i < n; i++) {
			String input = scan.next();
			char[] arr = input.toCharArray();
			String next = "";
			for(int j = 0; j < (arr.length - 1); j++) {
				String curr = Character.toString(arr[j]);
				next = Character.toString(arr[j + 1]);
				if(!curr.equals(next)) {
					if(curr.equals("U")) 
						countU++;
					else 
						countD++;
				} else {
					if(curr.equals("U")) 
						countU++;
					else 
						countD++;
				}
			}
		}
		if(countU > countD) 
			System.out.println(countD);
		else 
			System.out.println(countU);
		scan.close();
	}

}
